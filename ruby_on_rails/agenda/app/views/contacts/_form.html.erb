  <%= form_for @contact do |f| %>
    <%= f.label :name %> <%= f.text_field :name %>
    <%= f.fields_for :address do |a| %>
      <%= a.label :street %> 
      <%= a.text_field :street %>
      <%= a.label :number %> 
      <%= a.text_field :number %>
      <%= a.label :neighborhood %> 
      <%= a.text_field :neighborhood %>
    <% end %>
    <h4>Phones</h4>
    <div id="phones">
      <%= f.fields_for :phones do |phone| %>
        <%= render 'phone_fields', f: phone %>
      <% end %>
      <div class="links">
        <%= link_to_add_association 'add phone', f, :phones %>
        <br><br>
      </div>
    </div>
 
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>