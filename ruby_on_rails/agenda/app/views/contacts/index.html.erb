<p id="notice"><%= notice%> </p>

<h1>Contacts</h1>

<table style="width: 50%">
    <thead>
        <tr style="background-color: #666; color: #fff; width: 500px">
            <th>Name</th>
            <th>Street</th>
            <th>Number</th>
            <th>Neighborhood</th>
            <th>Phones</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @contacts.each do |contact| %>
            <tr style="background-color: #ccc;">
                <td style=" padding: 10px"><%= contact.name %></td>
                <td><%= contact.address.street %></td>
                <td><%= contact.address.number %></td>
                <td><%= contact.address.neighborhood %></td>
                <td>
                  <% contact.phones.each do |phone| %>
                    <%= phone.number %> <br>
                  <% end %>
                </td>
                <td><%= link_to 'Show', contact %></td>
                <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
                <td><%= link_to 'Destroy', contact, method: :delete,  data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
    </tbody>
</table>
<%= link_to 'New Contact', new_contact_path %>
